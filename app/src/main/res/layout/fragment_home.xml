<?xml version="1.0" encoding="utf-8"?>

<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skeletonLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:maskColor="@color/mystic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_blue_mosque_gradient_background"
        android:fillViewport="true"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sunrise_timing_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/sunset_timing_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:46"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/icha_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Ichaa"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/ichaa_clock_view"
                app:layout_constraintEnd_toEndOf="@+id/ichaa_clock_view"
                app:layout_constraintStart_toStartOf="@+id/ichaa_clock_view" />

            <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/ic_location_15"
                android:drawableLeft="@drawable/ic_location_15"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textCapSentences"
                android:text="Republic of the congo"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_smlarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/country_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Maroc (+1:00)"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_large"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_text_view" />

            <TextView
                android:id="@+id/fajr_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A'Sobh"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/farj_clock_view"
                app:layout_constraintEnd_toEndOf="@+id/farj_clock_view"
                app:layout_constraintStart_toStartOf="@+id/farj_clock_view" />

            <TextView
                android:id="@+id/dohr_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A'Dohr"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/dohr_clock_view"
                app:layout_constraintEnd_toEndOf="@+id/dohr_clock_view"
                app:layout_constraintStart_toStartOf="@+id/dohr_clock_view" />

            <TextView
                android:id="@+id/gregorianTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed"
                android:text="mon 21 Nov, 2020"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_smlarge"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hijriTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif-condensed"
                android:text="22 Safar, 1438"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_large"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gregorianTextView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nextPrayerConstraintLayout"
                android:layout_width="190dp"
                android:layout_height="190dp"
                app:layout_constraintBottom_toTopOf="@+id/datesConstraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/prayerTimetextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="13:48"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_xxxlarge"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25" />

                <TextView
                    android:id="@+id/timeRemainingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="28dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="- 04:15:50"
                    android:textColor="#530101"
                    android:textSize="@dimen/text_large"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
                    app:layout_constraintTop_toBottomOf="@+id/prayerNametextView" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cpb_background_progressbar_color="#EAF2F4"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="@color/dodger_blue"
                    app:cpb_progressbar_width="10dp"
                    app:cpb_round_border="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/prayerNametextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Al Maghrib"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/prayerTimetextView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/datesConstraintLayout"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.48000002">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.bouzidi.prayertimes.ui.clock.ClockView
                android:id="@+id/farj_clock_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dohr_clock_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datesConstraintLayout"
                app:layout_constraintVertical_bias="0.18" />

            <com.bouzidi.prayertimes.ui.clock.ClockView
                android:id="@+id/dohr_clock_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/farj_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/datesConstraintLayout"
                app:layout_constraintVertical_bias="0.18" />

            <com.bouzidi.prayertimes.ui.clock.ClockView
                android:id="@+id/asr_clock_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/maghreb_clock_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/farj_timing_constraint_layout" />

            <com.bouzidi.prayertimes.ui.clock.ClockView
                android:id="@+id/maghreb_clock_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ichaa_clock_view"
                app:layout_constraintStart_toEndOf="@+id/asr_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/farj_timing_constraint_layout" />

            <com.bouzidi.prayertimes.ui.clock.ClockView
                android:id="@+id/ichaa_clock_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/maghreb_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/dohr_timing_constraint_layout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/icha_timing_constraint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/ichaa_clock_view"
                app:layout_constraintStart_toStartOf="@+id/ichaa_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/ichaa_clock_view">

                <ImageView
                    android:id="@+id/icha_call_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_notifications_24dp"
                    android:tint="#00C167"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/icha_timing_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/icha_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:05"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/asr_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Asr"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/asr_clock_view"
                app:layout_constraintEnd_toEndOf="@+id/asr_clock_view"
                app:layout_constraintStart_toStartOf="@+id/asr_clock_view" />

            <TextView
                android:id="@+id/maghrib_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Maghreb"
                android:textColor="@color/stratos"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/maghreb_clock_view"
                app:layout_constraintEnd_toEndOf="@+id/maghreb_clock_view"
                app:layout_constraintStart_toStartOf="@+id/maghreb_clock_view" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/maghreb_timing_constraint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/maghreb_clock_view"
                app:layout_constraintStart_toStartOf="@+id/maghreb_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/maghreb_clock_view">

                <ImageView
                    android:id="@+id/maghrib_call_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_notifications_off_24dp"
                    android:tint="#D81B60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/maghreb_timing_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/maghreb_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:05"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sunet"
                android:tint="#D53304"
                app:layout_constraintBottom_toBottomOf="@+id/nextPrayerConstraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nextPrayerConstraintLayout"
                app:layout_constraintTop_toTopOf="@+id/nextPrayerConstraintLayout" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sunrise"
                android:tint="@color/sunrise"
                app:layout_constraintBottom_toBottomOf="@+id/nextPrayerConstraintLayout"
                app:layout_constraintEnd_toStartOf="@+id/nextPrayerConstraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nextPrayerConstraintLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/asr_timing_constraint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/asr_clock_view"
                app:layout_constraintStart_toStartOf="@+id/asr_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/asr_clock_view">

                <ImageView
                    android:id="@+id/asr_call_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_notifications_24dp"
                    android:tint="#00C167"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/asr_timing_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/asr_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:05"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dohr_timing_constraint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/dohr_clock_view"
                app:layout_constraintStart_toStartOf="@+id/dohr_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/dohr_clock_view">

                <ImageView
                    android:id="@+id/dohr_call_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_notifications_off_24dp"
                    android:tint="#D81B60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/dohr_timing_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dohr_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:05"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/farj_timing_constraint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/farj_clock_view"
                app:layout_constraintStart_toStartOf="@+id/farj_clock_view"
                app:layout_constraintTop_toBottomOf="@+id/farj_clock_view">

                <ImageView
                    android:id="@+id/fajr_call_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_notifications_24dp"
                    android:tint="#00C167"
                    app:layout_constraintBottom_toBottomOf="@+id/fajr_timing_text_view"
                    app:layout_constraintEnd_toStartOf="@+id/fajr_timing_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fajr_timing_text_view" />

                <TextView
                    android:id="@+id/fajr_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:21"
                    android:textColor="@color/stratos"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/holiday_indicator_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_celebration_24dp"
                android:drawableLeft="@drawable/ic_celebration_24dp"
                android:text="1st Day Of Ramadan"
                android:textColor="@color/flirt"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/nextPrayerConstraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</com.faltenreich.skeletonlayout.SkeletonLayout>