<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ayah_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quran.pages.AyahsActivity">

    <TextView
        android:id="@+id/ayahs_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/me_quran"
        android:gravity="center"
        android:keepScreenOn="true"
        android:padding="10dp"
        android:text="lorem_long"
        android:textAlignment="gravity"
        android:textIsSelectable="false"
        app:autoSizeMaxTextSize="25sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/page_num_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_linear_layout" />


    <LinearLayout
        android:id="@+id/top_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:alpha="0.9"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/surah_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="tvSurahName"
            android:fontFamily="@font/kitab"
            android:textAlignment="viewStart"
            android:textColor="@color/boulder"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/juz_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="tvJuz"
            android:fontFamily="@font/kitab"
            android:textAlignment="viewEnd"
            android:textColor="@color/boulder"
            android:textSize="@dimen/text_middle" />
    </LinearLayout>

    <TextView
        android:id="@+id/page_num_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="tafseerTap"
        android:fontFamily="@font/kitab"
        android:textColor="@color/boulder"
        android:textSize="@dimen/text_middle"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
